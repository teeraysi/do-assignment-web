{
  "compileOnSave": false,
  "compilerOptions": {
      "target": "esnext",
      "module": "commonjs",
      "allowJs": true,
      "jsx": "preserve",
      "outDir": "dist",
      "moduleResolution": "node",
      "allowSyntheticDefaultImports": true,
      "noImplicitAny": false,
      "strict": false,
      "strictNullChecks": false,
      "noUnusedLocals": false,
      "noUnusedParameters": false,
      "preserveConstEnums": true,
      "skipLibCheck": true,
      "sourceMap": true,
      "noEmit": true,
      "resolveJsonModule": true,
      "experimentalDecorators": true,
      "lib": [
          "dom",
          "es2015",
          "es2016",
          "es2017"
      ],
      "baseUrl": ".",
      "typeRoots": [
          "./node_modules/@types"
      ],
      "paths": {        
          "definitions/*": [
              "./src/definitions/*"
          ]          
      }
  },
  "includes": [      
      "next-env.d.ts"
  ]
}